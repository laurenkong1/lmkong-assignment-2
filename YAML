name: Python Flask App CI

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'
      - name: Install dependencies
        run: make install
      - name: Run Flask server
        run: make run &
      - name: Wait for server
        run: sleep 20
      - name: Test if server is running
        run: curl http://localhost:3000 || curl http://localhost:5000
